##########################################################
#					FLAGS								#
##########################################################

NAME		:= harl
CC		:= c++
CFLAGS		:= -Wall -Wextra -Werror -std=c++98 -Iincludes
DEBUG		:= -g

##########################################################
#					PROGRAM`S SRCS						 #
##########################################################


OBJS            := main.cpp \
		   Harl.cpp \
		   Harl.hpp


#########################################################
#						COLORS							#
#########################################################

CLR_RMV	:= \033[0m
RED		:= \033[1;31m
GREEN	:= \033[1;32m
YELLOW	:= \033[1;33m
BLUE    := \033[1;34m
CYAN	:= \033[1;36m

########################################################
#						FUNCTIONS					   #
########################################################

all: $(NAME)

$(NAME): $(OBJS)
		@echo "$(GREEN)Compilation ${CLR_RMV}of ${YELLOW}$(NAME) ${CLR_RMV}..."
		@ c++ -o $@ $^ 
		@ echo "$(GREEN)$(NAME) created ✔️"

clean:
	@ echo "$(RED)Cleaning up$(CLR_RMV)..."

fclean: clean
	@ rm -rf ${NAME}
	@ echo "$(RED)OBJS REMOVED ✔️"

re: fclean all

.PHONY: all clean fclean re
